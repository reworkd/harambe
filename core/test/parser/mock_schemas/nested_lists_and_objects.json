{
  "$schema": "https://raw.githubusercontent.com/reworkd/harambe/refs/heads/main/schema.json",
  "departments": {
    "type": "array",
    "items": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "teams": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "team_name": {
                "type": "string"
              },
              "members": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}